<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5A5A5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".data_collection_end_game"
    tools:showIn="@layout/activity_data_collection_end_game">

    <View
        android:id="@+id/hDiv1"
        android:layout_width="699dp"
        android:layout_height="16dp"
        android:background="#000000"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/end_Trap_TV2"
        android:layout_width="154dp"
        android:layout_height="68dp"
        android:fontFamily="@font/bolt_regular"
        android:gravity="center"
        android:text="Trap"
        android:textColor="#000"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542" />

    <View
        android:id="@+id/divider22"
        android:layout_width="406dp"
        android:layout_height="231dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.401"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701" />

    <RadioGroup
        android:id="@+id/End_Trap_RG"
        android:layout_width="329dp"
        android:layout_height="249dp"
        android:layout_margin="18dp"
        android:layout_marginStart="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.723">

        <RadioButton
            android:id="@+id/End_TrapScore_RB"
            android:layout_width="392dp"
            android:layout_height="wrap_content"
            android:text="Scored in Trap"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/End_TrapAttempt_RB"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:text="Attempted Trap"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/End_NoTrapAttempt_RB"
            android:layout_width="263dp"
            android:layout_height="65dp"
            android:text="No Attempt"
            android:textSize="40sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/end_Hang_TV"
        android:layout_width="172dp"
        android:layout_height="70dp"
        android:fontFamily="@font/bolt_regular"
        android:gravity="center"
        android:text="Hang"
        android:textColor="#000"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.245"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131" />

    <RadioGroup
        android:id="@+id/End_HangPark_RG"
        android:layout_width="331dp"
        android:layout_height="376dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.373"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.255">

        <RadioButton
            android:id="@+id/End_SoloHang_RB"
            android:layout_width="338dp"
            android:layout_height="76dp"
            android:text="Solo Stage"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/End_HarmonyHang_RB"
            android:layout_width="367dp"
            android:layout_height="74dp"
            android:text="Second on Chain"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/End_AttemptedHang_RB"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:text="Attempted Stage"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/End_Park_RB"
            android:layout_width="173dp"
            android:layout_height="73dp"
            android:text="Park"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/End_NoHangParkAttempt_RB"
            android:layout_width="281dp"
            android:layout_height="75dp"
            android:text="No Attempt"
            android:textSize="40sp" />
    </RadioGroup>

    <View
        android:id="@+id/divider22"
        android:layout_width="403dp"
        android:layout_height="374dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bolt_regular"
        android:text="End Game"
        android:textColor="#000"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/To_Submission_B"
        android:layout_width="539dp"
        android:layout_height="141dp"
        android:layout_marginStart="131dp"
        android:layout_marginEnd="130dp"
        android:fontFamily="@font/bolt_regular"
        android:text="To Submission"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.942" />

</android.support.constraint.ConstraintLayout>